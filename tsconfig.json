{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"]
    },
    "composite": true,
    "types": ["jest", "node"],
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
